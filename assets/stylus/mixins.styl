maxWidth(n)
  @media screen and (max-width: unit(n, 'px'))
    {block}

minWidth(n)
  @media screen and (min-width: unit(n, 'px'))
    {block}

minMaxWidth(n, m)
  @media screen and (min-width: unit(n, 'px')) and (max-width: unit(m, 'px'))
    {block}

// スマートフォン用レイアウト
sp()
  +maxWidth(480)
    {block}

// 縦画面タブレット用レイアウト
tablet()
  +minMaxWidth(481, 768)
    {block}

// スマートフォン/縦画面タブレット用レイアウト
touch()
  +maxWidth(768)
    {block}

// 縦画面タブレット/デスクトップ用レイアウト
tabDesk()
  +minWidth(481)
    {block}

// デスクトップ用レイアウト
desktop()
  +minWidth(769)
    {block}

// デスクトップ(1200px未満)用レイアウト
deskSmall()
  +minMaxWidth(769, 1199)
    {block}

// デスクトップ(1200px以上)用レイアウト
deskLarge()
  +minWidth(1200)
    {block}

// 各ページレスポンシブコンテナ幅
mainContainer()
  margin 0 auto
  +sp()
    margin 0 1.5rem
  +tablet()
    margin 0 3rem
  +deskSmall()
    width 600px
  +deskLarge()
    width 1000px


// 記事レスポンシブコンテナ幅
articleWidth()
  margin 5rem auto 10rem
  max-width 54rem
  padding 0 3rem
  +sp()
    padding 0 1.5rem

// テキストBold指定
bold()
  font-weight 700

